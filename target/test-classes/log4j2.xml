<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    
    <Appenders>
        <!-- File Appender -->
        <File name="FileLogger" fileName="logs/framework.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %c{1} - %msg%n"/>
        </File>
        
        <!-- Optional: Uncomment this later if you want console logs -->
        <!--
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        -->
    </Appenders>

    <Loggers>
        <!-- Set root level here: TRACE | DEBUG | INFO | WARN | ERROR | FATAL -->
        <Root level="info">
            <AppenderRef ref="FileLogger"/>
            
            <!-- Optional: Uncomment if Console is enabled -->
            <!-- <AppenderRef ref="Console"/> -->
        </Root>
    </Loggers>

</Configuration>
